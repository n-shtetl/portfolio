<script>
    function sine() {
        let xs = [];
        for (let i = 0; i < 500; i++) {
            xs.push(i);
        }

        let t = 0;
        function animate() {
            for (let i = 1; i <= 10; i++) {
                let points = xs.map(x => {
                let y = (i * 25) * Math.sin(1.15*x+t/10)
                return [x, y];
                });
                let path = "M" + points.map(p => {
                return p[0] + "," + p[1];
                }).join(" L")
                if (document.querySelector(`.path${i}`) === null) break;
                document.querySelector(`.path${i}`).setAttribute("d", path);
            }

            t += 0.15;

            requestAnimationFrame(animate);

        }
        
        animate();
    }
    sine();
</script>
